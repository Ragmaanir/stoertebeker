#!/usr/bin/env crystal

Dir.cd("browser") do
  `mkdir temp`
  puts "tsc"
  puts `tsc`
  puts "electron"
  Process.exec("node_modules/.bin/electron", [".built/index.js", "--log", "--verbose"])
end

